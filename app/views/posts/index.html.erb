<article class="mt-3">
  <h1><%= Post.model_name.human(count: @posts.size) %></h1>

  <section class="post-container" aria-description="posts list">
    <% @posts.each do |post| %>
      <%= link_to post_path(post) do %>
        <%= render post, is_truncated: true %>
      <% end %>
    <% end %>
  </section>
  <section aria-description="posts pagination" class="mt-5 pagination">
    <%== pagy_bootstrap_nav(@pagy) %>
  </section>
</article>
